{
    "compilerOptions": {
      "target": "es5",
      "moduleResolution": "node",
      "module": "commonjs",
      "sourceMap": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "noImplicitAny": false,
      "rootDir": "src",
      "outDir": "dist",
      "declaration": true,
      "strict": true,
      "esModuleInterop": true,
      "lib": ["dom", "es2017", "esnext" ]
    },
    "exclude": ["node_modules", "dist"]
  }